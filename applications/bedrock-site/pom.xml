<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.brettonw.bedrock</groupId>
        <artifactId>applications</artifactId>
        <version>1.3.2</version>
    </parent>

    <artifactId>bedrock-site</artifactId>
    <packaging>war</packaging>

    <name>Bedrock Site</name>

    <properties>
        <javascript.testDistDirectory>src/test/dist</javascript.testDistDirectory>
        <javascript.srcDistLatestDirectory>src/main/webapp/dist/latest</javascript.srcDistLatestDirectory>
    </properties>

    <build>
        <finalName>bedrock-site</finalName>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <id>clean</id>
                        <phase>clean</phase>
                        <configuration>
                            <target>
                                <exec executable="bin/clean.sh" failonerror="true">
                                    <arg value="${project.version}" />
                                </exec>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>compile</id>
                        <phase>generate-sources</phase>
                        <configuration>
                            <target>
                                <exec executable="bin/generate-sources.sh" failonerror="true">
                                    <arg value="${project.version}" />
                                </exec>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>test</id>
                        <phase>test</phase>
                        <configuration>
                            <target>
                                <exec executable="bin/test.sh" failonerror="true">
                                    <arg value="${project.version}"/>
                                </exec>
                                <exec executable="jjs" failonerror="true">
                                    <arg value="-scripting"/>
                                    <arg value="--language=es6"/>
                                    <arg value="${javascript.testDistDirectory}/test-harness.js"/>
                                    <arg value="${javascript.srcDistLatestDirectory}/bedrock-debug.js"/>
                                    <arg value="${javascript.testDistDirectory}/binary-search.js"/>
                                </exec>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>deploy</id>
                        <phase>deploy</phase>
                        <configuration>
                            <target>
                                <exec executable="eb" failonerror="true">
                                    <arg value="deploy" />
                                </exec>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
